<Window x:Class="TouchScreenBoard.Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TouchScreenBoard.Test"
        xmlns:keyboard="clr-namespace:TouchKeyboard.Keyboard;assembly=TouchScreenBoard"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="UserName:" Margin="10" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBox Width="200" FontSize="24" Margin="10" keyboard:TouchScreenKeyboard.TouchScreenKeyboard="True" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Password:" Margin="10" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <PasswordBox Margin="10" Width="200" FontSize="24" keyboard:TouchScreenKeyboard.TouchScreenKeyboard="True" IsHitTestVisible="True"/>
        </StackPanel>
    </StackPanel>
</Window>
